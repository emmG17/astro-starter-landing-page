---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Contact Us - Soluciones Industriales de Puebla" currentPage="contact">
  <div class="flex justify-center py-12 px-4 md:px-10">
    <div class="w-full max-w-6xl flex flex-col gap-10">
      <!-- Page Heading -->
      <div class="flex flex-col gap-3">
        <h1 class="text-4xl md:text-5xl font-black leading-tight tracking-tight text-text-main dark:text-white">
          Let's Solve Your Packaging Needs
        </h1>
        <p class="text-text-muted dark:text-gray-400 text-lg max-w-2xl">
          Reach out to Soluciones Industriales de Puebla for quotes, product inquiries, or to schedule a visit to our facility.
        </p>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
        <!-- Left Column: Form -->
        <div class="lg:col-span-7 flex flex-col gap-8">
          <div class="bg-surface-light dark:bg-surface-dark p-6 md:p-8 rounded-xl border border-border-color dark:border-gray-700 shadow-sm">
            <h2 class="text-2xl font-bold mb-6">Send us a message</h2>
            <form class="flex flex-col gap-5">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <label class="flex flex-col gap-2">
                  <span class="text-sm font-semibold">Full Name</span>
                  <input class="w-full rounded-lg border border-border-color dark:border-gray-700 bg-background-light dark:bg-background-dark h-12 px-4 text-base focus:ring-2 focus:ring-primary focus:border-primary transition-all placeholder:text-text-muted/70 dark:placeholder:text-gray-500" placeholder="Enter your name" type="text" />
                </label>
                <label class="flex flex-col gap-2">
                  <span class="text-sm font-semibold">Business Email</span>
                  <input class="w-full rounded-lg border border-border-color dark:border-gray-700 bg-background-light dark:bg-background-dark h-12 px-4 text-base focus:ring-2 focus:ring-primary focus:border-primary transition-all placeholder:text-text-muted/70 dark:placeholder:text-gray-500" placeholder="name@company.com" type="email" />
                </label>
              </div>
              <label class="flex flex-col gap-2">
                <span class="text-sm font-semibold">Subject</span>
                <input class="w-full rounded-lg border border-border-color dark:border-gray-700 bg-background-light dark:bg-background-dark h-12 px-4 text-base focus:ring-2 focus:ring-primary focus:border-primary transition-all placeholder:text-text-muted/70 dark:placeholder:text-gray-500" placeholder="Quote for bulk packaging..." type="text" />
              </label>
              <label class="flex flex-col gap-2">
                <span class="text-sm font-semibold">Message</span>
                <textarea class="w-full rounded-lg border border-border-color dark:border-gray-700 bg-background-light dark:bg-background-dark min-h-[160px] p-4 text-base focus:ring-2 focus:ring-primary focus:border-primary transition-all placeholder:text-text-muted/70 dark:placeholder:text-gray-500 resize-y" placeholder="How can we help with your packaging needs?"></textarea>
              </label>
              <button class="mt-2 w-full md:w-auto self-start bg-primary hover:bg-primary-dark text-background-dark font-bold text-base py-3 px-8 rounded-lg shadow-md hover:shadow-lg transition-all transform active:scale-95 flex items-center justify-center gap-2" type="submit">
                <span>Send Message</span>
                <Icon name="material-symbols:send" class="text-xl" />
              </button>
            </form>
          </div>
        </div>

        <!-- Right Column: Info & Map -->
        <div class="lg:col-span-5 flex flex-col gap-8">
          <!-- Contact Cards -->
          <div class="flex flex-col gap-4">
            <div class="flex items-start gap-4 p-4 rounded-lg hover:bg-surface-light dark:hover:bg-surface-dark transition-colors border border-transparent hover:border-border-color dark:hover:border-gray-700 group">
              <div class="bg-primary/20 dark:bg-primary/10 p-3 rounded-full text-primary-dark dark:text-primary group-hover:scale-110 transition-transform">
                <Icon name="material-symbols:location-on" />
              </div>
              <div>
                <h3 class="font-bold text-lg">Visit Us</h3>
                <p class="text-text-muted dark:text-gray-400">123 Industrial Park Ave,<br />Puebla, Mexico 72000</p>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-lg hover:bg-surface-light dark:hover:bg-surface-dark transition-colors border border-transparent hover:border-border-color dark:hover:border-gray-700 group">
              <div class="bg-primary/20 dark:bg-primary/10 p-3 rounded-full text-primary-dark dark:text-primary group-hover:scale-110 transition-transform">
                <Icon name="material-symbols:call" />
              </div>
              <div>
                <h3 class="font-bold text-lg">Call Us</h3>
                <p class="text-text-muted dark:text-gray-400">Mon-Fri from 8am to 6pm</p>
                <a class="text-primary-dark dark:text-primary font-medium hover:underline" href="tel:+522221234567">+52 (222) 123-4567</a>
              </div>
            </div>
            <div class="flex items-start gap-4 p-4 rounded-lg hover:bg-surface-light dark:hover:bg-surface-dark transition-colors border border-transparent hover:border-border-color dark:hover:border-gray-700 group">
              <div class="bg-primary/20 dark:bg-primary/10 p-3 rounded-full text-primary-dark dark:text-primary group-hover:scale-110 transition-transform">
                <Icon name="material-symbols:mail" />
              </div>
              <div>
                <h3 class="font-bold text-lg">Email Us</h3>
                <p class="text-text-muted dark:text-gray-400">For general inquiries</p>
                <a class="text-primary-dark dark:text-primary font-medium hover:underline" href="mailto:sales@solucionesindustriales.com">sales@solucionesindustriales.com</a>
              </div>
            </div>
          </div>

          <!-- Map Placeholder -->
          <div class="relative w-full h-64 md:h-80 rounded-xl overflow-hidden shadow-sm border border-border-color dark:border-gray-700 group">
            <img alt="Map showing location in Puebla, Mexico" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" src="/images/pages/contact-map.jpg" />
            <div class="absolute inset-0 bg-linear-to-t from-black/50 to-transparent flex items-end p-6 pointer-events-none">
              <div class="bg-surface-light dark:bg-surface-dark px-4 py-2 rounded-lg shadow-lg flex items-center gap-2">
                <Icon name="material-symbols:pin-drop" class="text-primary" />
                <span class="text-xs font-bold text-text-main dark:text-white">Main Warehouse</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
