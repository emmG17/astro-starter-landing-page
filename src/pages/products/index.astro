---
import Layout from '../../layouts/Layout.astro';

import { getCollection } from 'astro:content';

const products = await getCollection('products');

// Define display order
const order = ['cardboard', 'foam', 'plastic-wrap', 'tapes', 'strapping', 'custom'];

const categories = products.sort((a, b) => {
  return order.indexOf(a.id) - order.indexOf(b.id);
});
---

<Layout title="Products - Soluciones Industriales de Puebla" currentPage="products">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-12 flex flex-col items-center text-center">
      <span class="mb-2 inline-block rounded-full bg-primary/20 px-3 py-1 text-xs font-bold text-green-800 dark:text-primary">PRODUCT CATALOG</span>
      <h1 class="text-3xl font-bold tracking-tight text-text-main dark:text-white sm:text-4xl">Industrial Packaging Categories</h1>
      <p class="mt-4 max-w-2xl text-lg text-text-muted dark:text-gray-400">Explore our comprehensive range of high-quality materials designed to protect your products during storage and shipping.</p>
    </div>

    <!-- Product Categories Grid -->
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {categories.map((category) => (
        <div class="group relative flex flex-col overflow-hidden rounded-2xl bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl dark:bg-white/5 dark:border dark:border-white/10">
          <div class="relative h-56 w-full overflow-hidden bg-gray-100">
            {category.data.image ? (
              <img
                alt={category.data.title}
                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                src={category.data.image}
              />
            ) : (
              <div class="absolute inset-0 bg-linear-to-br from-gray-200 to-gray-300 dark:from-gray-700 dark:to-gray-800 flex items-center justify-center">
                <span class="material-symbols-outlined text-6xl text-gray-400 group-hover:text-primary transition-colors">design_services</span>
              </div>
            )}
            <div class="absolute right-4 top-4 flex size-10 items-center justify-center rounded-full bg-primary text-text-main shadow-md">
              <span class="material-symbols-outlined">{category.data.icon}</span>
            </div>
          </div>
          <div class="flex flex-1 flex-col p-6">
            <h3 class="mb-2 text-xl font-bold text-text-main dark:text-white group-hover:text-green-700 transition-colors">{category.data.title}</h3>
            <p class="mb-4 text-sm leading-relaxed text-text-muted dark:text-gray-400">{category.data.description}</p>
            <div class="mt-auto pt-4 border-t border-gray-100 dark:border-white/10">
              <a class="inline-flex items-center text-sm font-bold text-text-main hover:text-primary dark:text-white dark:hover:text-primary transition-colors" href={`/products/${category.id}`}>
                {category.data.title === "Custom Solutions" ? "Start Project" : "View Products"}
                <span class="material-symbols-outlined ml-1 text-lg">arrow_forward</span>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
